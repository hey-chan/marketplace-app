<div class="mx-5">
  <h1 class="mx-5">Welcome to Vintage video games</h1>

  <div class="mx-5 mb-3">
    <%= search_form_for @q do |f| %>
      <%= f.label :title_cont %>
      <%= f.search_field :title_cont %>
      <%= f.submit %>
    <% end %>
  </div>
  <div class="row row-cols-1 row-cols-md-4 g-4 mx-5">
    <% @listings.each do |listing|%>
      <div class="col mb-4">
        <div class="card h-100">
          <% if listing.picture.attached? %>
            <%= link_to (image_tag listing.picture, class: "card-img-top"), listing %>
          <% else %>
            <%= link_to (image_tag 'gamecartridge.jpg', class: "card-img-top"), listing %>
          <% end %>
          <div class="card-body">
            <h4 class="card-title"><%= listing.title %></h4>
            <h6 class="card-text">Listed by: <%= listing.user.username %></h6>
            <h5 class="card-text">$<%= listing.price / 100.00 %></h5>
            <%= link_to "See more", listing_path(listing.id), class: "btn btn-info text-white" %>
            <% if listing.sold == true %>
              <button class="btn btn-secondary float-right" disabled>Sold</button>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
