<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3 ml-2">
    <%= form.label :category_id, class: "col form-label" %>
    <%= form.select :category_id, @categories.map {|cat| [cat.name, cat.id]}, class: "col form-select"%>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :platform_id, class: "col form-label"  %>
    <%= form.select :platform_id, @platforms.map {|plat| [plat.name, plat.id]}, class: "form-select" %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :title, class: "col form-label"  %>
    <%= form.text_field :title %>
  </div>
  
  <h6 class="mb-2 ml-2">Condition</h6>

  <div class="form-check form-check-line mb-3 ml-2">
    <% @conditions.each do |option| %>
      <%= form.label :condition, option.capitalize, class:"form-label mr-1"%>
      <%= form.radio_button :condition, option%>
    <% end %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :price, class: "col form-label"  %>
    <%= form.number_field :price %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :description, class: "col form-label" %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
