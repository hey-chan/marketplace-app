<section class="container d-flex flex-column flex-md-row px-2 my-2 my-md-5">
  <div class="content col-12 col-md-7 col-lg-8 p-0 pr-md-3">
    <div class="col-12 p-0 main-preview mb-4">
      <%# Links to listings_helper %>
      <%= image_tag image_select(@listing), class: "thumbnail card-img top" %>
    </div>
  </div>
  <div class="sidebar col-lg-4 p-0 mx-2 d-md-block">
    <h1 class="mb-sm-2 mb-md-5"><%= @listing.title %></h1>
    <p class="blockquote mt-2">Listed by: <%= @listing.user.username%></p>
    <p class="blockquote mt-2">Condition: <%= @listing.condition.capitalize %></p>
    <br>
    <p class="blockquote mt-2">Category: <%= @listing.category.name %></p>
    <p class="blockquote mt-2">Platform: <%= @listing.platform.name %></p>
    <br>
    <p class="blockquote mt-2">Description: <%= @listing.description%></p>
    <p class="blockquote mt-2">Price: $<%= @listing.price%></p>
    <p class="blockquote mt-2">Sold: <%= @listing.sold%></p>
  </div>
  <div class='container'>
    <div class ='d-flex justify-content-evenly'>
      <%=link_to "Edit", edit_listing_path(@listing.id), class: "btn btn-warning mr-3" if current_user.id == @listing.user_id%>
      <%=link_to "Delete", @listing, method: :delete, data: {confirm: "Are you sure?"} , class: "btn btn-danger mr-3" if current_user.id == @listing.user_id %>
    </div>
  </div>
</section>






